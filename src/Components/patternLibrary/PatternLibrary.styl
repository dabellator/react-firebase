// *******************************************
// *******************************************

// Color vars for style guide section
// See: http://www.google.com/design/spec/style/color.html#color-ui-color-palette

// *******************************************
// *******************************************

$deep-purple--100= #d1c4e9;
$deep-purple--500= #673ab7;

$cyan--100= #b2ebf2;
$cyan--500= #00bcd4;

// Values

$black= #000000;
$white= #ffffff;

$gray--050= #fafafa;
$gray--100= #f5f5f5;
$gray--200= #eeeeee;
$gray--300= #e0e0e0;
$gray--400= #bdbdbd;
$gray--500= #9e9e9e;
$gray--600= #757575;
$gray--700= #616161;
$gray--800= #424242;
$gray--900= #212121;

// *******************************************
// *******************************************

// Layout for pattern library

// *******************************************
// *******************************************

// vars
$pl-sidebar-width= em(240px);
$pl-header-height= em(64px);

// container element of style guide section
.pl {
  position: relative;
  height: 100%;
  min-height: 100%;
}

// style guide sidebar with main navigation
// fixed left on large screens
// off canvas for mobile

.pl-sidebar__trigger {
  position: absolute;
  top: 0;
  left: 0;
  height: em(64px);
  width: em(64px);
  cursor: pointer;
  padding: em(19px);
  line-height: 0;

  @media screen and (min-width: 640px) {
    display: none;
  }

}

.pl-sidebar {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  z-index: 10;
  width: $pl-sidebar-width;
  height: 100%;
  padding: em(84px) em(30px) em(30px);
  background: $white;
  border-right: 1px solid $gray--300;
  transition: 200ms left $ease-in-out-back;
  box-shadow: 4px 0 0 "rgba(%s, .05)" % ($black)

  &.pl-sidebar--hidden {
    left: em(-240px);
  }

  @media screen and (min-width: 640px) {
    box-shadow: none;

    &.pl-sidebar--hidden {
      left: 0;
    }

  }

}

// main content of style guide
// to right of sidebar on large screens
// centered for mobile
.pl-content {
  z-index: 1;
  width: auto;
  min-height: 100vh;
  margin-left: 0;
  background: tint($black, 96%);
  border: 1px solid transparent;

  @media screen and (min-width: 640px) {
    margin-left: $pl-sidebar-width;
  }

}

// centered content of page with max-width
.pl-page {
  max-width: em(850px);
  height: 100%;
  min-height: 100%;
  margin: $pl-header-height auto 0 auto;
  padding: em(40px);

  &.example .row {
    margin-bottom: 20px;

    > div {
      background: "tint(%s, 60%)" % ($primary-color)
      padding: em(3px);
    }
  }

  &.example .row .box {
    padding: em(10px);
    background: $primary-color;
    border: 1px solid "darken(%s, 20%)" % ($primary-color)
    color: $white;
  }

}

// style guide page sidebar fixed to top
// offset by sidebar on desktop
.pl-content__header {
  position: fixed;
  top: 0;
  right: 0;
  z-index: 10;
  left: 0;
  height: $pl-header-height;
  padding: 0 em(30px) 0 em(64px);
  line-height: $pl-header-height;
  background: $cyan--500;
  box-shadow: 0px 4px 0px "rgba(%s, .1)" % ($black)

  @mixin min-screen($media-medium) {
    left: $pl-sidebar-width;
    padding: 0 em(30px);
  }
}

// page title text inside of page sidebar
.pl-content__title {
  font-weight: bold;
  font-size: em(28px);
  color: $white;
  text-shadow: 2px 2px 0px "rgba(%s, .1)" % ($black)
}
