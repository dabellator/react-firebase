// Style guide main navigation

// *******************************************
// *******************************************

// nav menu element
.pl-nav__menu {
  list-style-type: none;
}

// nav menu top level item element
.pl-nav__menu-item {
  margin: em(8px) 0;
}

// nav menu link item
.pl-nav__menu-link {
  padding: em(5px) em(10px);
  display: block;
  font-size: em(14px);
  font-weight: bold;
  color: $gray--800;
  border-left: 3px solid transparent;

  &:hover {
    color: $gray--900;
    cursor: pointer;
  }

}

// current state of navigation
.pl-nav__menu-link--is-current {
  border-left-color: $cyan--100;
}
